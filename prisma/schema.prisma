generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model users {
  id       String    @id @default(uuid())
  email    String    @unique
  username String
  password String
  Surveys  surveys[]
}

model areas {
  id            String          @id @default(uuid())
  name          String          @unique
  surveys_areas surveys_areas[]
  Answer_areas  answer_areas[]
}

model surveys {
  id                String   @id @default(uuid())
  title             String
  description       String
  time_range_start  DateTime
  time_range_end    DateTime
  answer_time_start DateTime
  answer_time_end   DateTime
  user_id           String
  disabled          Boolean  @default(false)

  user          users           @relation(fields: [user_id], references: [id])
  surveys_areas surveys_areas[]
  Answer_areas  answer_areas[]
}

model surveys_areas {
  id        String @id @default(uuid())
  survey_id String
  area_id   String

  survey surveys @relation(fields: [survey_id], references: [id])
  area   areas   @relation(fields: [area_id], references: [id])
}

model answer_areas {
  id        String @id @default(uuid())
  survey_id String
  area_id   String
  time      Int

  survey surveys @relation(fields: [survey_id], references: [id])
  area   areas   @relation(fields: [area_id], references: [id])
}
